<div class="row">
	<%pictures.forEach(function(picture){ %>
    <div class="col-xs-12 col-lg-4"><img src="<%= picture %>" id="imggallery" class="img-thumbnail"></div>
<%}); %>
  	
</div>
</div>
</body>
</html>


